<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">?colorBackground</item>
        <item name="android:popupBackground">?colorBackground</item>
        <item name="android:textColor">?colorText</item>
        <item name="android:textColorSecondary">?colorTextFaded</item>
        <item name="android:actionMenuTextColor">@color/colorGreyLight</item>
        <item name="android:popupMenuStyle">@style/PopupWindow</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorBackground">@color/colorWhite</item>
        <item name="colorText">@color/colorBlack</item>
        <item name="colorTextFaded">@color/colorGrey</item>
        <item name="colorOutlineLight">@color/colorTransparentGrey</item>
        <item name="colorOutline">@color/colorBlack</item>
        <item name="colorProgressBar">@color/colorPrimary</item>
        <item name="colorTagsBackground">@color/colorTransparentGrey</item>
        <item name="colorTagsText">@color/colorBlack</item>
    </style>

    <style name="DarkMutedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorPrimaryLight">@color/colorGrey</item>
        <item name="colorBackground">@color/colorBlack</item>
        <item name="colorText">@color/colorGreyLight</item>
        <item name="colorTextFaded">@color/colorGrey</item>
        <item name="colorOutlineLight">@color/colorGrey</item>
        <item name="colorOutline">@color/colorGrey</item>
        <item name="colorProgressBar">@color/colorGrey</item>
        <item name="colorTagsBackground">@color/colorGrey</item>
        <item name="colorTagsText">@color/colorTransparentGrey</item>
    </style>

    <!--Progress bar-->
    <style name="ProgressBarCircular">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?colorProgressBar</item>
    </style>

    <style name="ProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?colorProgressBar</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <!--Text Styles-->
    <style name="TextStyle">
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/fontSize_medium</item>
    </style>

    <style name="TextStyle.Main">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextStyle.Secondary">
        <item name="android:textSize">@dimen/fontSize_small</item>
        <item name="android:textColor">?attr/colorTextFaded</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/fontSize_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Value">
        <item name="android:gravity">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextStyle.Counters">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">@dimen/fontSize_xlarge</item>
        <item name="android:textColor">?attr/colorTextFaded</item>
    </style>

    <style name="TextStyle.Dialog" parent="TextStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <!--Edit Text Styles-->
    <style name="EditText">
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">12</item>
        <item name="android:textColorHint">?attr/colorTextFaded</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <!--Button Styles-->
    <style name="Button">
        <item name="android:textColor">?colorText</item>
        <item name="android:background">@drawable/button_drawable</item>
    </style>

    <style name="Button.Dialog">
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorText</item>
        <item name="android:textSize">@dimen/fontSize_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Rounded">
        <item name="android:background">@drawable/scrobble_button_drawable</item>
    </style>

    <!--Layout styles-->
    <style name="DialogStyle">
        <item name="android:background">@drawable/dialog_window</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">?colorText</item>
        <item name="tabTextColor">?colorText</item>
    </style>

    <!--Navigation View-->
    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?colorText</item>
        <item name="itemTextColor">?colorText</item>
    </style>

    <!--Popup Window-->
    <style name="PopupWindow" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?colorBackground</item>
    </style>

    <!--    <style name="DropdownMenuItem" parent="Widget.AppCompat.DropDownItem.Spinner">
            <item name="android:background">?colorBackground</item>
        </style>-->
</resources>
