<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/recycler_item">

    <TextView
        android:id="@+id/tvPosition"
        style="@style/TextStyle.Counters"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:minWidth="24dp"/>

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tvPosition"
        android:contentDescription="@string/cover_description"/>

    <TextView
        android:id="@+id/tvArtist"
        style="@style/TextStyle.Main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/tvDetails"
        android:layout_toEndOf="@id/ivCover"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvDetails"
        style="@style/TextStyle.Counters"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>