<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLabel"
        style="@style/TextStyle.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recycler_label_height"
        android:layout_alignTop="@id/tvValue"
        android:layout_alignBottom="@id/tvValue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvValue"
        style="@style/TextStyle.Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/tvLabel"/>

</RelativeLayout>